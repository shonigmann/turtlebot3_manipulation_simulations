    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.2" friction="0.5"/>
  </joint>


  <link name="caster_back_right_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
        <!--
        TODO- Consider adding to gazebo version
        <surface>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+5</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
        -->
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>
  <xacro:if value="$(arg gazebo)">
    <!-- Represent ball joint by 2 additional links and joints   -->
    <link name="caster_back_right_link_proxy1">
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.005" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <link name="caster_back_right_link_proxy2">
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.005" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <joint name="caster_back_right_joint_x" type="continuous">
      <parent link="base_link"/>
      <child link="caster_back_right_link_proxy1"/>
      <origin xyz="-0.177 -0.064 -0.005" rpy="-1.57 0 0"/>
      <axis xyz="1 0 0"/>
      <dynamics damping="0.1" friction="0.2"/>
    </joint>
    <joint name="caster_back_right_joint_y" type="continuous">
      <parent link="caster_back_right_link_proxy1"/>
      <child link="caster_back_right_link_proxy2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <dynamics damping="0.1" friction="0.2"/>
    </joint>
    <joint name="caster_back_right_joint_z" type="continuous">
      <parent link="caster_back_right_link_proxy2"/>
      <child link="caster_back_right_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.1" friction="0.2"/>
    </joint>

  </xacro:if>
  <xacro:if value="${not $(arg gazebo)}">
    <joint name="caster_back_right_joint" type="fixed">
      <parent link="base_link"/>
      <child link="caster_back_right_link"/>
      <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
    </joint>
  </xacro:if>


  <link name="caster_back_left_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
<!--        <box size="0.030 0.009 0.020"/>-->
        <sphere radius="0.005"/>
        <!--
        TODO- Consider adding to gazebo version
        <surface>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+5</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
        -->
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>
  <xacro:if value="$(arg gazebo)">
    <!-- Represent ball joint by 2 additional links and joints   -->
    <link name="caster_back_left_link_proxy1">
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.005" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
